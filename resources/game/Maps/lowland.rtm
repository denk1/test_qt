			<!--<Layer diffuseSpecular="lowland_ds4.PNG" normalHeight="lowland_nh4.png" blend="lowland_b4.PNG" worldSize="30" />-->
			
			<Layer diffuseSpecular="Layer1_diffuse.jpg" normalHeight="Layer1_normal.png" blend="Layer1_blend.png" worldSize="30" />
			<Layer diffuseSpecular="Layer2_diffuse.jpg" normalHeight="Layer2_normal.png" blend="Layer2_blend.png" worldSize="30" />
