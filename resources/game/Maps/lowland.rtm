		<Resource type="BonusBuilding" src="SpeedBonus.rtbb" resourceGroup="Bonuses"/>
		<Resource type="Bonus" src="ArmorBonus.rtb" resourceGroup="Bonuses"/>
	</IncludeResources>
	
	<Light>
		<Ambient r="0.5" g="0.5" b="0.5" />
		<Diffuse r="1.0" g="1.0" b="1.0" />
		<Specular r="0.1" g="0.1" b="0.1" />
		<Direction x="0.5" y="-0.3" z="0" />
	</Light>
	
       	<!-- <Landscape src="lowland.raw" resourceGroup="Landscape" size="256" dat="lowland.dat" scaleXZ="4" scaleY="1" > -->
	<Landscape src="TestTerrain.raw" resourceGroup="Landscape" size="256" dat="TestTerrain.dat" scaleXZ="4" scaleY="2" > 
		<Layers>
			<!--<Layer diffuseSpecular="lowland_ds1.png" normalHeight="lowland_nh1.png" blend="lowland_b1.png" worldSize="30" />-->
			<!--<Layer diffuseSpecular="lowland_ds2.png" normalHeight="lowland_nh2.png" blend="lowland_b2.png" worldSize="30" />-->
