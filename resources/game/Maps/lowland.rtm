						<!-- position relative to SpeedBonus position -->
						<Position x="10" y="0" z="10" />
						<Direction x="1" y="0" z="0" />
					</Tower>
				</Towers>
			</BonusBuilding>
			<!--<BonusBuilding type="SpeedBonus" >
				<Position x="0" y="10" z="-20" />
