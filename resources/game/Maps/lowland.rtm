			<Tower type="BaseD" >
				<Position x="280" y="40" z="470" />
				<Direction x="1" y="0" z="0" />
			</Tower>

			<Tower type="BaseD" >
				<Position x="210" y="40" z="380" />
				<Direction x="0" y="0" z="1" />
			</Tower>
			
		</Towers>
		
		<BonusBuildings>
			<BonusBuilding type="SpeedBonus" >
				<Position x="240" y="40" z="430" />
				<Direction x="0" y="0" z="0" />
